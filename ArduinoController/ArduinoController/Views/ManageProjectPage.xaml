<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ArduinoController.Views.ManageProjectPage"
		Title="Manage Project">
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding Project.Name}" FontSize="Medium" />
            <Label Text="{Binding Project.Description}" FontSize="Medium" />
            <StackLayout Orientation="Horizontal">
                <Button BackgroundColor="#90CAF9" HorizontalOptions="Start" Text="Manage by Bluetooth" Clicked="BluetoothClicked"></Button>
                <Button BackgroundColor="#424242" TextColor="White" HorizontalOptions="End" Text="Manage by Wi-Fi" Clicked="WiFiClicked"></Button>
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
