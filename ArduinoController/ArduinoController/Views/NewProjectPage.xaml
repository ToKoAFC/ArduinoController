<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ArduinoController.Views.NewProjectPage"
		Title="New Project">
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Text" FontSize="Medium" />
            <Entry Text="{Binding Project.Name}" FontSize="Small" />
            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Project.Description}" FontSize="Small" Margin="0" />
            <Label Text="Outputs count" FontSize="Medium" />
            <Editor Keyboard="Numeric" Text="{Binding Project.OutputsCount}" FontSize="Small" Margin="0" />
            <StackLayout Orientation="Horizontal">
                <Button BackgroundColor="#90CAF9" HorizontalOptions="Start" Text="Bluetooth settings" Clicked="BluetoothClicked"></Button>
                <Button BackgroundColor="#424242" TextColor="White" HorizontalOptions="End" Text="Wi-Fi settings" Clicked="WiFiClicked"></Button>
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
